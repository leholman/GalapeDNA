# Function to convert angle and magnitude to x,y coordinates
get_xy <- function(angle, magnitude) {
angle_rad <- angle * (pi/180)
x <- magnitude * sin(angle_rad)
y <- magnitude * cos(angle_rad)
c(x, y)
}
