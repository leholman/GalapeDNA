add_arrowheads <- function(plot) {
x_ends <- plot$data[[1]]$xend
y_ends <- plot$data[[1]]$yend
plot + annotate("segment", x = x_ends, y = y_ends, xend = x_ends, yend = y_ends,
arrow = arrow(length = unit(0.05, "npc")))
}
